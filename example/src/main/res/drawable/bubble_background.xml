<?xml version="1.0" encoding="utf-8"?>
<!-- This defines a rectangle with rounded corners, just like the Compose shape -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The corner radius matches the 12.dp from your Compose example -->
